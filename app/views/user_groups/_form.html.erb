<%= simple_form_for [ group, user_group ] do |f| %>
  <%= f.input :user,
              collection: User.all - group.members,
              label_method: :githubname,
              value_method: :id,
              label: false,
              hint: "This user can display gists on this group" %>
  <%= f.submit "Add Member", class: 'btn github-btn--green' %>
<% end %>
