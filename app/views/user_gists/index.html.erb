<%= render Gist::NewGistCountComponent.new(params[:new_gists_count], @user) %>
<div class="default-container">
  <div class="actions">
    <% if policy(@user).get_gists? %>
      <div class="refresh-gist github-cta-button">
        <%= link_to @gists.present? ? "Refresh" : "Import gists", [ :get_gists, slug: @user.githubname ], method: :post %>
      </div>
    <% end %>
  </div>
  <% if @gists.present? %>
    <% @gists.each do |gist| %>
      <%= render Gist::CardComponent.new(gist) %>
    <% end %>
  <% end %>
</div>
