<div class="navbar navbar-expand-sm navbar-light navbar-hubgist">
  <%= link_to root_path, class: "navbar-brand", data: { turbolinks: false } do %>
    Home
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item <%= active?('users', params[:controller]) %>">
          <%= link_to "Profile", user_path(current_user.githubname), class: "nav-link", data: { turbolinks: false } %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar_url , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <div class="signed-in-as">
              Signed in as <b><%= current_user.githubname %></b>
            </div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link bordered" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
