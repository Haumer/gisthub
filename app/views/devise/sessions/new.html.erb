<div class="offset-sm-3 col-sm-6">
  <%= link_to user_github_omniauth_authorize_path, class: "github-link" do %>
    <button class="github-login">
      <i class="fab fa-github github-social"></i>
      Sign in with GitHub
    </button>
  <% end %>
  <div class="signin-form">
    <h3>Sign in to HubGist</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <div class="form-group password optional user_password">
          <label class="password optional" for="user_password">
            Password
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-link" %>
            <% end %>
          </label>
          <input class="form-control password optional" autocomplete="current-password" type="password" name="user[password]" id="user_password">
        </div>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sing in", class: "btn btn-login" %>
      </div>
    <% end %>
  </div>
  <div class="signup-form">
    New to HubGist? <%= link_to "Create an account", new_user_registration_path %>.
  </div>
</div>

