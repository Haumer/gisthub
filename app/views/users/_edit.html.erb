<%= simple_form_for user, url: user_path(slug: @user.githubname), data: { controller: 'form', remote: 'true' } do |f| %>
  <%= f.input :auto_import, wrapper: :custom_boolean_switch, label: "Automatic", hint: "Automatically import gists.", input_html: { data: { action: 'form#submit' } } %>
  <%= f.input :only_group_import, wrapper: :custom_boolean_switch, label: "Only Groups", hint: "Only import gists that are in groups.", input_html: { data: { action: 'form#submit' } } %>
  <%= f.input :stop_import, wrapper: :custom_boolean_switch, label: "Stop importing", hint: "Stop importing new gists.", input_html: { data: { action: 'form#submit' } } %>
  <%= f.submit "Update Settings", class: "d-none" %>
<% end %>
