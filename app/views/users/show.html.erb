<div class="refresh-gist">
  <%= link_to "refresh", [ :get_gists, slug: @user.githubname ], method: :post %>
</div>
<div class="d-flex">
  <%= render "groups/form", group: Group.new %>
  <%= render "labels/form", label: Label.new %>
</div>

<% if @gists.present? %>
  <% @gists.each do |gist| %>
    <%= render Gist::CardComponent.new(gist) %>
  <% end %>
<% end %>
