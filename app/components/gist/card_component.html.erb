<div class="gist-card">
  <div class="gist-info">
      <div class="language">
        <% @gist.languages_percent.each do |language, percent| %>
          <img class="language-icon" src="<%= Language.find_by_name(language.capitalize).img_url %>" alt="<%= language %>"> <%= percent.to_i %>%
        <% end %>
      </div>
      <div class="files">
        <%= pluralize(@gist.gist_files.count, "Files") %>:
        <% @gist.gist_files.each do |file| %>
          <%= link_to file do %>
            <%= file.filename %>
          <% end %>
        <% end %>
      </div>
      <div class="comments">
        <%= @gist.comments %> <i class="far fa-comment"></i>
      </div>
  </div>
  <div class="date">
    Last updated: <%= @gist.date %>
  </div>
</div>
